<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- GitHub remote -->
    <remote name="github" fetch="https://github.com/"/>
    <remote name="github_hcc" fetch="https://github.com/"/>

    <!-- Instead of using "sync-s" in ToT HCC project, we now explicitly
         enumerate all submodules used by ToT HCC in the manifest -->

    <!-- ToT HCC -->
    <project name="RadeonOpenCompute/hcc"
             path="hcc"
             remote="github_hcc"
             revision="clang_tot_upgrade"/>

    <!-- ToT HCC Clang -->
    <project name="RadeonOpenCompute/hcc-clang-upgrade"
             path="hcc/clang"
             remote="github_hcc"
             revision="clang_tot_upgrade"/>

    <!-- amd-hcc LLVM placed inside ToT HCC -->
    <project name="RadeonOpenCompute/llvm"
             path="hcc/compiler"
             remote="github_hcc"
             revision="amd-hcc"/>

    <!-- amd-hcc LLD, placed inside ToT HCC -->
    <project name="RadeonOpenCompute/lld"
             path="hcc/lld"
             remote="github_hcc"
             revision="amd-hcc"/>

    <!-- amd-hcc compiler-rt, placed inside ToT HCC -->
    <project name="RadeonOpenCompute/compiler-rt"
             path="hcc/compiler-rt"
             remote="github_hcc"
             revision="amd-hcc"/>

    <!-- amd-common LLVM, used to build ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/llvm"
             path="llvm"
             remote="github"
             revision="amd-common"/>

    <!-- amd-common LLD, used to build ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/lld"
             path="llvm/tools/lld"
             remote="github"
             revision="amd-common"/>

    <!-- amd-common Clang, used to build ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/clang"
             path="llvm/tools/clang"
             remote="github"
             revision="amd-common"/>

    <!-- ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/ROCm-Device-Libs"
             path="ocml"
             remote="github"
             revision="master"/>

</manifest>
