<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- GitHub remote -->
    <remote name="github"
            fetch="https://github.com/"
            pushurl="git@github.com:"/>

    <!-- ToT HCC -->
    <project name="RadeonOpenCompute/hcc"
             path="hcc"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- ToT HCC Clang -->
    <project name="RadeonOpenCompute/hcc-clang-upgrade"
             path="hcc/clang"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- amd-hcc LLVM placed inside ToT HCC -->
    <project name="RadeonOpenCompute/llvm"
             path="hcc/compiler"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- amd-hcc LLD, placed inside ToT HCC -->
    <project name="RadeonOpenCompute/lld"
             path="hcc/lld"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- amd-hcc compiler-rt, placed inside ToT HCC -->
    <project name="RadeonOpenCompute/compiler-rt"
             path="hcc/compiler-rt"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- amd-hcc LLVM, used to build ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/llvm"
             path="llvm"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- amd-hcc LLD, used to build ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/lld"
             path="llvm/tools/lld"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- ToT HCC Clang, used to build ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/hcc-clang-upgrade"
             path="llvm/tools/clang"
             remote="github"
             revision="remove-promote-change-addr-space"/>

    <!-- ROCm-Device-Libs -->
    <project name="RadeonOpenCompute/ROCm-Device-Libs"
             path="rocdl"
             remote="github"
             revision="remove-promote-change-addr-space"/>

</manifest>
