<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- GitHub remote -->
    <remote name="github" fetch="https://github.com/"/>

    <!-- HCC -->
    <project name="RadeonOpenCompute/hcc"
             path="hcc"
             remote="github"
             revision="clang_tot_upgrade"/>

    <!-- ToT HCC Clang -->
    <project name="RadeonOpenCompute/hcc-clang-upgrade"
             path="hcc/clang"
             remote="github"
             revision="clang_tot_upgrade"/>

    <!-- amd-hcc LLVM placed inside HCC -->
    <project name="RadeonOpenCompute/llvm"
             path="hcc/compiler"
             remote="github"
             revision="amd-hcc"/>

    <!-- amd-hcc LLD, placed inside HCC -->
    <project name="RadeonOpenCompute/lld"
             path="hcc/lld"
             remote="github"
             revision="amd-hcc"/>

    <!-- amd-hcc compiler-rt, placed inside HCC -->
    <project name="RadeonOpenCompute/compiler-rt"
             path="hcc/compiler-rt"
             remote="github"
             revision="amd-hcc"/>

    <!-- remote-promote-change-addr-space ROCm-Device-Libs, placed inside HCC -->
    <project name="RadeonOpenCompute/ROCm-Device-Libs"
             path="hcc/rocdl"
             remote="github"
             revision="remove-promote-change-addr-space"/>

</manifest>
